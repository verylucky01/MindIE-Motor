{
  "version": "v1.0",
  "controller_alarm_port": 1027,
  "node_manager_port": 1028,
  "heartbeat_interval_seconds": 5,
  "node_manager_tls_config": {
    "server_tls_enable": false,
    "server_tls_items": {
      "ca_cert": "./security/node_manager/cert/ca_cert/ca.pem",
      "tls_cert": "./security/node_manager/cert/server_cert/server.pem",
      "tls_key": "./security/node_manager/cert/server_cert/server.key.pem",
      "tls_passwd": "./security/node_manager/cert/server_cert/server_pwd.txt",
      "tls_crl": ""
    },
    "client_tls_enable": false,
    "client_tls_items": {
      "ca_cert": "./security/node_manager/cert/ca_cert/ca.pem",
      "tls_cert": "./security/node_manager/cert/server_cert/server.pem",
      "tls_key": "./security/node_manager/cert/server_cert/server.key.pem",
      "tls_passwd": "./security/node_manager/cert/server_cert/server_pwd.txt",
      "tls_crl": ""
    }
  }
}