{
  "LogConfig": {
    "LOG_PATH": "~/mindie/log",
    "LOG_TO_FILE": "true",
    "LOG_TO_STDOUT": "false",
    "LOG_LEVEL": "INFO",
    "LOG_VERBOSE": "true",
    "LOG_ROTATE": "-fs 20 -r 10 -fc 64"
  },

  "CertConfig": {
    "CA_CERT": "/path/to/cacert.pem",
    "KEY_FILE": "/path/to/client.pem.key",
    "CERT_FILE": "/path/to/client.pem",
    "CRL_FILE": "/path/to/crl.pem"
  },

  "OutputConfig": {
    "INSTANCE_PATH": "./instance"
  },

  "ServerConfig": {
    "ENABLE_MANAGEMENT": false,
    "MAX_LINK_NUM": 1000
  }
}